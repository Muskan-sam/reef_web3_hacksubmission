#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../@polkadot/typegen/scripts/polkadot-types-internal-metadata.cjs" "$@"
else 
  exec node  "$basedir/../@polkadot/typegen/scripts/polkadot-types-internal-metadata.cjs" "$@"
fi
