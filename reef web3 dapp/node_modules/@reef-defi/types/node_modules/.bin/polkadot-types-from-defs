#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../../../../@polkadot/typegen/scripts/polkadot-types-from-defs.cjs" "$@"
  ret=$?
else 
  node  "$basedir/../../../../@polkadot/typegen/scripts/polkadot-types-from-defs.cjs" "$@"
  ret=$?
fi
exit $ret
